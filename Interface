local httpService = game:GetService("HttpService")

local InterfaceManager = {} do
	InterfaceManager.Folder = "FluentConfiguration"
    InterfaceManager.Configuration = {
        Theme = "Dark",
        Acrylic = true,
        Transparency = true,
        MenuKeybind = "LeftControl"
    }

    function InterfaceManager:SetFolder(folder)
		self.Folder = folder;
		self:BuildFolderTree()
	end

    function InterfaceManager:SetLibrary(library)
		self.Library = library
	end
--Settings
    function InterfaceManager:BuildFolderTree()
		local paths = {}

		local parts = self.Folder:split("/")
		for idx = 1, #parts do
			paths[#paths + 1] = table.concat(parts, "/", 1, idx)
		end

		table.insert(paths, self.Folder)
		table.insert(paths, self.Folder .. "/configuration")

		for i = 1, #paths do
			local str = paths[i]
			if not isfolder(str) then
				makefolder(str)
			end
		end
	end

    function InterfaceManager:SaveConfiguration()
        writefile(self.Folder .. "/options.json", httpService:JSONEncode(InterfaceManager.Configuration))
    end

    function InterfaceManager:LoadConfiguration()
        local path = self.Folder .. "/options.json"
        if isfile(path) then
            local data = readfile(path)
            local success, decoded = pcall(httpService.JSONDecode, httpService, data)

            if success then
                for i, v in next, decoded do
                    InterfaceManager.Configuration[i] = v
                end
            end
        end
    end

    function InterfaceManager:BuildInterfaceSection(tab)
        assert(self.Library, "Must set InterfaceManager.Library")
		local Library = self.Library
        local Configuration = InterfaceManager.Configuration

        InterfaceManager:LoadConfiguration()

		local section = tab:AddSection("Interface")

		local InterfaceTheme = section:AddDropdown("InterfaceTheme", {
			Title = "Theme",
			Description = "Changes the interface theme.",
			Values = Library.Themes,
			Default = Configuration.Theme,
			Callback = function(Value)
				Library:SetTheme(Value)
                Configuration.Theme = Value
                InterfaceManager:SaveConfiguration()
			end
		})

        InterfaceTheme:SetValue(Configuration.Theme)
	
		if Library.UseAcrylic then
			section:AddToggle("AcrylicToggle", {
				Title = "Acrylic",
				Description = "The blurred background requires graphic quality 8+",
				Default = Configuration.Acrylic,
				Callback = function(Value)
					Library:ToggleAcrylic(Value)
                    Configuration.Acrylic = Value
                    InterfaceManager:SaveConfiguration()
				end
			})
		end
	
		section:AddToggle("TransparentToggle", {
			Title = "Transparency",
			Description = "Makes the interface transparent.",
			Default = Configuration.Transparency,
			Callback = function(Value)
				Library:ToggleTransparency(Value)
				Configuration.Transparency = Value
                InterfaceManager:SaveConfiguration()
			end
		})
	
		local MenuKeybind = section:AddKeybind("MenuKeybind", { Title = "Minimize Bind", Default = Configuration.MenuKeybind })
		MenuKeybind:OnChanged(function()
			Configuration.MenuKeybind = MenuKeybind.Value
            InterfaceManager:SaveConfiguration()
		end)
		Library.MinimizeKeybind = MenuKeybind
    end
end

return InterfaceManager
